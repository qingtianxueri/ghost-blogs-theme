{{!-- Post author info --}}
{{#author}}

<footer class="post-author">
	<a class="post-author-avatar" href="{{url}}" style="background-image:url({{#if image}}{{image}}{{else}}{{asset "img/user-image.png"}}{{/if}})"></a>
	<div class="post-author-wrap">
		{{#if bio}}
			<p class="post-author-bio"><strong><a href="{{url}}">{{name}}</a> â€” </strong>{{bio}}</p>
		{{else}}
			<p class="post-author-bio">Read <a href="{{url}}">more posts</a> by this author.</p>
		{{/if}}

		<ul class="u-unstyled u-flex u-h-b-lg">
			<li>
				<h5>CONTACT</h5>
				{{#if facebook}}<a href="{{facebook_url}}" title="Facebook" target="_blank"><i class="i-facebook"></i> Facebook</a>{{/if}}
				{{#if twitter}}<a href="{{twitter_url}}" style="margin-left:5px" title="{{twitter}}" target="_blank"><i class="i-twitter"></i> Twitter</a>{{/if}}
			</li>

			{{#if location}}<li><h5>LOCATION</h5><span><i class="i-map"></i> {{location}}</span></li>{{/if}}
			{{#if website}}<li><h5>WEBSITE</h5><a href="{{website}}" target="_blank">{{website}}</a></li>{{/if}}

		</ul>

	</div>
</footer>

{{/author}}
